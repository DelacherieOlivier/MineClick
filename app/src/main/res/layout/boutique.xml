<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/shop"
    tools:context=".BoutiqueActivity">

    <ImageView
        android:id="@+id/potion2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="36dp"
        android:contentDescription="@string/potion2"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/potion1"
        app:srcCompat="@mipmap/potion_red_1" />

    <ImageView
        android:id="@+id/potion1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="36dp"
        android:contentDescription="@string/potion1"
        android:onClick="onClickPotion1"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nuage"
        app:srcCompat="@mipmap/potion_red_1" />

    <ImageView
        android:id="@+id/potion3"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="36dp"
        android:contentDescription="@string/potion3"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/potion2"
        app:srcCompat="@mipmap/potion_red_1" />

    <ImageView
        android:id="@+id/nuage"
        android:layout_width="412dp"
        android:layout_height="295dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="124dp"
        android:contentDescription="@string/nuage"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/nuage" />

    <ImageView
        android:id="@+id/money"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="200dp"
        android:contentDescription="@string/emeraude"
        app:layout_constraintBottom_toBottomOf="@+id/nuage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/emeraude"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/pnj"
        android:layout_width="208dp"
        android:layout_height="394dp"
        android:layout_marginStart="164dp"
        android:contentDescription="@string/pnj"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/potion2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/villageoi" />


    <Button
        android:id="@+id/retour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="32dp"
        android:background="@mipmap/bouton"
        android:fontFamily="@font/mineclicktexte"
        android:onClick="onClickRetour"
        android:text="@string/retour"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/acheter"
        android:layout_width="90dp"
        android:layout_height="22dp"
        android:layout_marginBottom="132dp"
        android:background="@mipmap/bouton"
        android:fontFamily="@font/mineclicktexte"
        android:text="@string/acheter"
        android:textColor="#fff"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/nuage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintStart_toEndOf="@+id/imgEmerauld" />

    <ImageView
        android:id="@+id/imgEmerauld"
        android:layout_width="21dp"
        android:layout_height="24dp"
        android:layout_marginBottom="132dp"
        android:visibility="invisible"
        android:contentDescription="@string/emeraude"
        app:layout_constraintBottom_toBottomOf="@+id/nuage"
        app:layout_constraintStart_toEndOf="@+id/prix"
        app:srcCompat="@mipmap/emeraude"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="132dp"
        android:visibility="invisible"
        android:fontFamily="@font/mineclicktexte"
        android:text="@string/co_t_30"
        android:textColor="#000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/nuage"
        app:layout_constraintStart_toStartOf="@+id/nuage" />

    <TextView
        android:id="@+id/nbargent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/mineclicktexte"
        android:text="@string/_1000"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/potion1"
        app:layout_constraintEnd_toStartOf="@+id/money"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/description"
        android:layout_width="228dp"
        android:layout_height="59dp"
        android:fontFamily="@font/mineclicktexte"
        android:gravity="center"
        android:text="Bienvenue dans ma boutique ! Quelle potion te ferait plaisir ?"
        android:textColor="#000"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/prix"
        app:layout_constraintEnd_toEndOf="@+id/nuage"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/nuage"
        app:layout_constraintTop_toTopOf="@+id/nuage"
        app:layout_constraintVertical_bias="0.731" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="52dp"
        android:fontFamily="@font/mineclicktexte"
        android:text="x0"
        android:textColor="#fff"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/pnj"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="52dp"
        android:fontFamily="@font/mineclicktexte"
        android:text="x0"
        android:textColor="#fff"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/pnj"
        app:layout_constraintTop_toBottomOf="@+id/nbargent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="52dp"
        android:fontFamily="@font/mineclicktexte"
        android:text="x0"
        android:textColor="#fff"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/pnj"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>
