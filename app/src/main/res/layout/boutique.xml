<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/shop"
    tools:context=".BoutiqueActivity">

    <ImageView
        android:id="@+id/potion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/potion2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/potion1"
        app:srcCompat="@mipmap/potion_red_1" />

    <ImageView
        android:id="@+id/potion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/potion1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nuage"
        app:srcCompat="@mipmap/potion_red_1" />

    <ImageView
        android:id="@+id/potion3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/potion3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/potion2"
        app:srcCompat="@mipmap/potion_red_1" />

    <ImageView
        android:id="@+id/nuage"
        android:layout_width="393dp"
        android:layout_height="305dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/nuage"
        app:layout_constraintBottom_toTopOf="@+id/pnj"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/nuage" />

    <ImageView
        android:id="@+id/money"
        android:layout_width="66dp"
        android:layout_height="62dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="200dp"
        android:contentDescription="@string/emeraude"
        app:layout_constraintBottom_toBottomOf="@+id/nuage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/emeraude"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imgEmerauld"
        android:layout_width="34dp"
        android:layout_height="41dp"
        android:layout_marginBottom="140dp"
        android:contentDescription="@string/emeraude"
        app:layout_constraintBottom_toBottomOf="@+id/nuage"
        app:layout_constraintStart_toEndOf="@+id/prix"
        app:srcCompat="@mipmap/emeraude"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/pnj"
        android:layout_width="210dp"
        android:layout_height="400dp"
        android:layout_marginStart="164dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2dp"
        android:contentDescription="@string/pnj"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/potion2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/villageoi" />

    <Button
        android:id="@+id/retour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/mineclicktexte"
        android:background="@mipmap/bouton"
        android:onClick="onClickRetour"
        android:text="@string/retour"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/potion3" />


    <Button
        android:id="@+id/acheter"
        android:layout_width="103dp"
        android:layout_height="35dp"
        android:layout_marginBottom="144dp"
        android:background="@mipmap/bouton"
        android:fontFamily="@font/mineclicktexte"
        android:text="@string/acheter"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/nuage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgEmerauld" />

    <TextView
        android:id="@+id/nbargent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/mineclicktexte"
        android:text="@string/_1000"
        android:textColor="#fff"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/potion1"
        app:layout_constraintEnd_toStartOf="@+id/money"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="140dp"
        android:text="@string/co_t_30"
        android:fontFamily="@font/mineclicktexte"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/nuage"
        app:layout_constraintStart_toStartOf="@+id/nuage" />

    <TextView
        android:id="@+id/description"
        android:layout_width="220dp"
        android:layout_height="89dp"
        android:fontFamily="@font/mineclicktexte"
        android:gravity="center"
        android:text="@string/cette_potion_vous_permettra_d_activer_autoclick_pendant_30s"
        android:textColor="#000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/prix"
        app:layout_constraintEnd_toEndOf="@+id/nuage"
        app:layout_constraintStart_toStartOf="@+id/nuage"
        app:layout_constraintTop_toTopOf="@+id/nuage"
        app:layout_constraintVertical_bias="0.736" />

</androidx.constraintlayout.widget.ConstraintLayout>
